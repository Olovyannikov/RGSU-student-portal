section.activity-work
    .activity-work__container.container
        .activity-work__header
            h2.activity-work__title.title--s Учебная работа
            span.divider.no-print
            .activity-work__progress.no-print
                .progress
                    .progress-bar(data-progress='75')
                .progress-info
        .activity-work__wrapper
            .activity-work__section
                p.activity-work__section-title.accordeon-title Результаты учебной деятельности
                    span.activity-work__section-count 4
                    button.activity-work__section-button.accordeon-button
