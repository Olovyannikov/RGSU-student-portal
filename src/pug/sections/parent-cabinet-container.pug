section.parent-cabinet
    .parent-cabinet__container.container
        .parent-cabinet__wrapper
            .parent-cabinet__header
                h2.parent-cabinet__title.title--large Кабинет родителя
            .parent-cabinet__tabs
                .parent-cabinet__buttons
                    button(data-id="perfomance").parent-cabinet__button.parent-cabinet__button--active.btn.btn--light Успеваемость
                        svg(width="36" height="36")
                            use(href="#studentwork")
                    button(data-id="finance").parent-cabinet__button.btn.btn--light Финансы
                        svg(width="36" height="36")
                            use(href="#wallet")
                    button(data-id="schedules").parent-cabinet__button.btn.btn--light Расписание занятий
                        svg(width="36" height="36")
                            use(href="#schedule")
                    button(data-id="visits").parent-cabinet__button.btn.btn--light Посещения
                        svg(width="36" height="36")
                            use(href="#clock")
                include ./parent-cabinet-tabs

            include ./_advertisement-content
        aside.parent-cabinet__aside
            h2.parent-cabinet__aside-title.title--large Ваш ребенок
            .portfolio-cards__wrapper
                +portfolio-card('card-avatar-1.webp', 'card-avatar-1.png', 'Мария Владимировна Н.', 'Факультет искусств', 'Педагогическое образование', '20', '2', '75', 'digital-profile.html')
                    ul.portfolio-cards__buttons
                        li
                            a(href="my-children-profile.html").btn.btn--regular.portfolio-cards__button Открыть кабинет
            section.portfolio
                .portfolio__container.card--stack
                    h2.portfolio__title.title Средний балл
                    .portfolio__wrapper
                        .portfolio__progress.gauge.gauge--score(data-width="236" data-value="3.59")
                            span.gauge__value
            section.portfolio
                .portfolio__container.card--stack
                    h2.portfolio__title.title Цифровой профиль
                    .portfolio__wrapper
                        .portfolio__progress.gauge(data-width="236" data-value="75")
                            span.gauge__value
